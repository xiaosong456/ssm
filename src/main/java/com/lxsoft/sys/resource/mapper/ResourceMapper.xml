<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lxsoft.sys.resource.mapper.ResourceMapper">

    <select id="listResource" resultType="com.lxsoft.sys.resource.entity.Resource">
        SELECT
        id,
        name,
        permission,
        url
        FROM
        t_resource
    </select>

    <insert id="add" parameterType="com.lxsoft.sys.resource.entity.Resource">
        insert into t_resource(name,permission,url)
        VALUES (#{name},#{permission},#{url})
    </insert>

    <update id="update" parameterType="com.lxsoft.sys.resource.entity.Resource">
        update t_resource
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="permission != null">
                permission = #{permission},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM t_resource
        WHERE id = #{id}
    </delete>

    <select id="load" parameterType="int" resultType="com.lxsoft.sys.resource.entity.Resource">
        SELECT
        id,
        name,
        permission,
        url
        FROM
        t_resource
        WHERE id = #{id}
    </select>
</mapper>